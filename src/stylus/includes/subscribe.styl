.Modal
	position fixed
	z-index 3000
	background rgba(dark_color, 0.7)
	top 0
	left 0
	bottom 0
	right 0
	display none
	animation close .3s ease-in-out
	&::after
		content ''
		display block
		filter blur(10px)
		// background-image url('../img/bg-blur.png')
		background-position center
		background-repeat no-repeat
		background-size cover
		height 100%
		width 100%
		position absolute
		z-index -1
		top 0
		
		
	&.is-open
		display block
		animation open .3s ease-in-out

	&-Container
		position: absolute;
		top: 50%;
		left: 50%;
		margin-top: -150px;
		margin-left: -250px;
		position relative
		width 500px
		min-height 300px
		background white_color
		padding 40px
		top 50%
		left 50%
		border-radius 3px
		box-shadow 0 10px 40px -6px rgba(dark_color, .4)
	&-Close
		position absolute
		top 0
		right 0
		width 40px
		height 40px
		display block
		&:hover
			opacity 0.6
	 
.Subscribe
	position relative
	&-Img
		max-width 80px
		display block
		margin 20px auto 30px
	&-Msg
		margin 40px auto
		display block
		
/* Estilos para el formulario de mailchimp
------------------------------------------------------------------------------*/
.mc_embed_signup
	width 100%
	position absolute
	bottom 0
	left 0
	text-align left
	
	.content-email 
		display inline-block
		width 400px
		position absolute
		bottom 0
		left 0
	.email
		border none
		width 100%
		background rgba(primary_color, .1)
		color primary_color
		line-height 58px
		outline 0
		text-indent 10px
		transition_all(.3s)
		margin 0
		&:focus,
		&:hover
			background rgba(primary_color, .2)
			border none
			
	#mce-EMAIL-error
		font-weight 600 
		color red
		position absolute
		top -40px
		left 10px
		width 100%
		height 40px
		line-height 40px
	
	.button
		position absolute
		right 0
		bottom 0
		background primary_color
		border none
		color white_color
		display inline-block
		height 60px 
		line-height 60px
		margin 0
		outline 0
		overflow hidden
		width 100px 
	


@keyframes open 
	0%
		opacity 0
	100%
		opacity 1
		
@keyframes close
	0%
		opacity 1
	100%
		opacity 0
		
