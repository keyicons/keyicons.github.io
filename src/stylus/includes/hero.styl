.Hero
	background-color white_color
	color dark_color
	display block
	.container
		padding 100px 20px 20px
	&_Logo
		display inline-block
		width 200px
		&_Icon
			display none
			margin 0 0 10px 0
			width 40px
		&_Name
			text-transform uppercase
			font-size 12px
			letter-spacing 1px
			color gray_color_3
	&_Lead
		font-size 36px
		font-weight 700
	&_Description 
		margin 0 0 40px 0
		font-size 16px
			
		
	&_Download 
		display none

@media only screen and (min-width : 768px)
	.Hero
		.container
			padding 120px 20px 100px
			
		&_Lead
			font-size 64px
			line-height 64px
	
		&_Download
			display inline-block
			min-width 80px
			.icon
				vertical-align middle
	
		

@media only screen and (min-width : 1100px)		
	.Hero
		.container
			padding 80px 0 60px
