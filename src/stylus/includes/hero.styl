		// 	display inline-block
		// 	min-width 80px
		// 	.icon
		// 		vertical-align middle
	
		

@media only screen and (min-width : 1100px)		
	.Hero
		.container
			padding 80px 20px 60px
	
		&_Description 
			width 74%
		&_Software
			width 25%
			
@media screen and (min-width 1400px)
	.Hero
		text-align left
		.container
			padding 80px 0 60px
	