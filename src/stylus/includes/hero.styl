.Hero
	background-color white_color
	color dark_color
	display block
	.container
		padding 100px 20px 20px
	&_Logo
		display inline-block
		width 200px
		&_Icon
			display none
			margin 0 0 10px 0
			width 40px
		&_Name
			text-transform uppercase
			font-size 12px
			letter-spacing 1px
			color gray_color_3
	&_Lead
		font-size 36px
		font-weight 700
	&_Description 
		margin 0 0 40px 0
		font-size 16px
			
		
.Download 
	display none

@media only screen and (min-width : 768px)
	.Hero
		.container
			padding 120px 20px 100px
			// background-image url('../img/keyicons-hero.png')
			// background-position right 100px
			// background-repeat no-repeat
			// background-size 450px
		
		&_Lead
			font-size 64px
			line-height 64px
	
	.Download
		background primary_color
		color dark_color
		display inline-block
		font-size 14px 
		font-weight 600
		height 40px
		line-height 40px
		padding 0 25px
		position relative
		text-transform uppercase
		vertical-align top
		border-radius 30px
		z-index 10
		transition_all(.3s)
		

@media only screen and (min-width : 1100px)		
	.Hero
		.container
			padding 80px 0 60px
	.Download
		right 0
		overflow hidden
		&::after
			background rgba(dark_color, .2)
			bottom 100%
			content ''
			display none
			height 100%
			left 0 
			position absolute
			transition_all(.3s)
			width 100%
			z-index -1
			
		&:hover
			shadow_custom(0, 10px, 30px, -6px, .2)
			&::after
				bottom 0
