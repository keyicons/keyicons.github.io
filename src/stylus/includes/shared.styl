.Shared
	background white
	position fixed
	display block
	bottom -400px 
	width 500px
	height 140px
	left 50%
	margin-left -250px
	shadow_custom(primary_color, 0, 10px, 30px, -6px, .4)
	transition_all(.5s)
	&.is-open
		bottom 40px
	&-Close
		position absolute
		top 0
		right 0
		width 40px
		height 40px
		display block
		border none
		outline 0
		z-index 10
		color primary_color
		transition_all(.3s)
		&:hover
			color dark_color
	&-Img
		position absolute
		width 140px
		background rgba(primary_color, .1)
		left 0
		top 0
		height 100%
		display inline-block
	&-Content
		padding 20px
		position absolute
		bottom 0
		width 360px
		right 0
		display inline-block
		text-align left
		*
			margin 0
			
	&-Btn
		width 40px
		height 40px 
		display inline-block
		padding 10px
		line-height 40px
		margin 4px 0 0 
		overflow hidden
		transition_all(.3s)
		color primary_color
		&:hover
			color dark_color
			
		&:visited
			color primary_color
			&:hover
				color dark_color

.icon
	width 100%
	height 100%
	display inline-block
	stroke currentColor
	fill currentColor
	stroke-width 0
	