.Shared
	background-image url('../img/keyicons-colored.jpg')
	background-position center
	background-repeat no-repeat
	background-size cover
	position fixed
	display block
	width 300px
	height 300px
	left 50%
	margin-left -150px
	padding 30px
	border-radius 24px
	shadow_custom(black_color, 0, 10px, 60px, -6px, .2)
	transition_all(.5s)
	z-index 1000
	bottom -400px 
	&.is-open
		bottom 50%
		transform translateY(50%)

	&-Close
		background transparent
		position absolute
		top 10px
		right 10px
		width 40px
		height 40px
		display block
		border none
		outline 0
		z-index 10
		color dark_color
		transition_all(.3s)
		border-radius 40px
		background rgba(white_color, .1)
		svg 
			fill white_color
		&:hover
			background-color rgba(white_color, .3)

	&-Img
		width 100px
		display inline-block
		margin 10px auto 0
		filter invert(100%)
	&-Content
		padding 20px
		position absolute
		bottom 0
		width 100%
		right 0
		display inline-block
		text-align center
		color white_color
		*
			margin 0
		p
			margin 10px 0
			
	&-Btn
		display inline-block
		margin 4px 4px 0
		padding 10px 20px
		overflow hidden
		transition_all(.3s)
		border-radius 30px
		background rgba(white_color, .1)
		color white_color
		border solid thin rgba(white_color, .3)
		min-width 180px
		.icon
			width 20px
			height 20px
			margin-left 6px
		&:hover
			border solid thin white_color
			color black_color
			background white_color
			// shadow_custom(dark_color, 0, 0, 0, 6px, .2)
			

.icon
	width 24px
	height 24px
	display inline-block
	stroke currentColor
	vertical-align middle
	fill currentColor
	stroke-width 0

