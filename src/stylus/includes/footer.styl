.Footer
	width 100%
	position relative
	background dark_color
	text-align center
	padding 20px 0
	&_Subscribe
		border-bottom solid thin rgba(gray_color_3, .5)
		color white_color
		padding 10px 0px 30px
		margin 0 auto
		transition_all(.3s)
		position relative
		&.is-scrolled
			background dark_color
			transition_all(.3s)
			animation up-subscribe .3s
			z-index 2000
			padding 20px 40px 10px
			border-radius 4px 4px 0 0
			position fixed
			bottom 0px
			left 5%
			width 90%
		/* Estilos para el formulario de mailchimp
		------------------------------------------------------------------------------*/
		.mc_embed_signup
			width 100%
		.email 
			border none
			background transparent
			border solid 2px gray_color_3
			border-radius 30px
			color white_color
			display inline-block
			line-height 36px
			outline 0
			text-indent 10px
			width 90%
			margin 0 auto 10px
			transition_all(.3s)
			&:focus,
			&:hover
				border solid 2px white_color
				
		.button
			outline 0
			width 90%
			margin 0 auto
			display inline-block
			border none
			
			
	&_Copy
		display inline-block
		padding 0 10px
		font-size 12px
		color white_color
		&_Link
			color secondary_color
			font-weight 600
	.Menu
		text-align center
		&_item
			&_link
				font-size 12px
				color white_color
			
@media only screen and (min-width : 601px)
	.Footer
		&_Subscribe
			.email
				width 58%
				margin-right 2%
			.button
				width 38%


@media only screen and (min-width : 768px)
	.Footer
		text-align left
			
		&_Menu
			width 100%
			text-align right
			display inline-block
			.Menu 
				text-align right
				&_item
					padding 0
					margin 0 10px
						
					
					
@media only screen and (min-width : 1100px)
	.Footer
		&_Copy
			padding 0
		.Menu
			&_item
				&_link
					&:hover
						color primary_color
						

@keyframes up-subscribe
	0%
		bottom -100px
	100%
		bottom 0

