.Footer
	width 100%
	position relative
	background dark_color
	text-align center
	padding 20px 0
			
			
	&_Copy
		display inline-block
		padding 0 10px
		font-size 12px
		color white_color
		&_Link
			color secondary_color
			font-weight 600
	.Menu
		text-align center
		&_item
			&_link
				font-size 12px
				color white_color
			

@media only screen and (min-width : 768px)
	.Footer
		text-align left
			
		&_Menu
			width 100%
			text-align right
			display inline-block
			.Menu 
				text-align right
				&_item
					padding 0
					margin 0 10px
						
					
					
@media only screen and (min-width : 1100px)
	.Footer
		&_Copy
			padding 0
		.Menu
			&_item
				&_link
					&:hover
						color primary_color
						

