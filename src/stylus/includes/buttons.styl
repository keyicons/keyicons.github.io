.btn 
	border-radius 30px
	display inline-block
	font-size 14px 
	font-weight 600
	height 40px
	line-height 40px
	margin 0 5px
	padding 0 25px
	position relative
	transition_all(.3s)
	vertical-align top
	z-index 10
	min-width 80px
	border none
	outline 0
	&-primary
		background primary_color
		color white_color
	&-secondary
		color primary_color
		border solid thin primary_color
		background white_color
	


@media only screen and (min-width : 1100px)		
	.btn
		&:hover
			shadow_custom(primary_color, 0, 10px, 30px, -6px, .4)
			transform scale(1.05)
		 