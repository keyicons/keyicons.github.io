.btn 
	border-radius 30px
	display inline-block
	font-size 14px 
	font-weight 700
	height 40px
	line-height 40px
	margin 0 5px
	padding 0 16px
	position relative
	transition_all(.3s)
	vertical-align top
	z-index 10
	min-width 80px
	border none
	outline 0
	&-primary
		background white_color
		color acent_color
	// &-secondary
	// 	color acent_color
	// 	border solid thin acent_color
	// 	background white_color
	&:focus
		opacity .8
		shadow_custom(light_color, 0, 0, 0, 6px, .4)
// .icon 
// 	color white_color 

@media only screen and (min-width : 1100px)		
	.btn
		&:hover
			shadow_custom(light_color, 0, 0, 0, 6px, .4)
		&:focus
			shadow_custom(light_color, 0, 0, 0, 6px, .4)
		 