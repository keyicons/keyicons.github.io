.btn 
	display inline-block
	font-size 12px
	font-weight 400
	font-family tipography
	height 40px
	line-height 40px
	margin 0 5px
	padding 0 20px
	position relative
	transition_all(.3s)
	vertical-align top
	z-index 10
	min-width 80px
	outline 0
	color black_color
	bg_gradient_top(white_color, light_color)
	border-radius 4px
	box-shadow 0px 0 0 6px rgba(light_color, 0.5)
	border solid 1px light_color
	&::after
		content ''
		position absolute
		width 90%
		height 70%
		top 15%
		left 5%
		bg_gradient_top(light_color, white_color)
		z-index -1
		border-radius 20px
	&-float
		position fixed
		z-index 1000
		bottom 20px
		left 50%
		width calc(100% - 32px)
		transform translateX(-50%)
		text-align center
		text-transform uppercase
		padding 8px 0
		height auto
.link
	font-family tipography2
	font-size 14px
	line-height 40px 
	color gray_color
	text-decoration none
	text-transform uppercase
	letter-spacing 1px
	transition_all(.3s)
	display inline-block
