@media only screen and (min-width : 560px)
	.btn
		&-float
			position relative
			padding 0 20px
			bottom initial
			width auto
	

@media only screen and (min-width : 1100px)		
	.btn
		&:hover
			box-shadow 0px 0 0 6px rgba(light_color, 0.5), 0px 8px 20px -5px rgba(black_color, 0.4);
			
	.link
		#COIN
			transition_all(.3s)
	
	.link
		&:hover
			color black_color
			#COIN
				fill black_color