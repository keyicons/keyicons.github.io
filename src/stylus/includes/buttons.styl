.btn 
	border-radius 30px
	display inline-block
	font-size 14px 
	font-weight bold
	font-family tipography
	height 40px
	line-height 40px
	margin 0 5px
	padding 0 20px
	position relative
	transition_all(.8s)
	vertical-align top
	z-index 10
	min-width 80px
	border none
	outline 0
	background blue_color
	color white_color
	&-ghost
		background rgba(white_color, .1)
		color white_color
	&:focus
		opacity .8
		shadow_custom(light_color, 0, 0, 0, 6px, .4)
.link
	font-family tipography2
	font-size 14px
	color dark_color
	text-decoration underline
	&.link-pink
		color pink_color
	&.link-blue
		color blue_color
	&.link-yellow
		color yellow_color
@media only screen and (min-width : 1100px)		
	.btn
		&-ghost
			min-width 180px
			border solid thin rgba(white_color, .3)
			&:hover
				border solid thin white_color
		&:hover
			shadow_custom(blue_color, 0, 0, 0, 6px, .3)
	.link
		&:hover
			text-decoration line-through