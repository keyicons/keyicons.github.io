.SearchBox
	width 97%
	margin 0 auto 40px
	input
		width 100%
		line-height 60px
		background rgba(gray_color_3, .1)
		border none
		text-indent 10px
		outline 0
		transition_all(.3s)
		border-radius 3px
		&:hover,
		&:focus
			background rgba(primary_color, .1)
			shadow_custom(primary_color, 0, 0, 0, 2px, .4)






