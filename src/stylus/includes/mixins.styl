/* Mixins
_____________________________________________________ */
shadow()
	box-shadow: 0px 40px 100px -10px rgba(0,0,0,0.05);


shadow_custom(c, x, y, b, i, o)
	box-shadow x y b i rgba(c, o)
	
shadow_2()
	box-shadow 0px 0px 8px -5px rgba(black_color, 0.12), 0px 8px 12px -5px rgba(black_color, 0.24);

shadow_strong()
	box-shadow 0 12px 15px 0 rgba(0, 0, 0, 0.3)
	
border_radius()	
	border-radius 2px

border_grey()
	border solid thin gray_color_4

border_bottom()
	border-bottom solid thin gray_color_4
	

transition_all(s)
	transition all s cubic-bezier(0.22, 0.61, 0.30, 1)
	
bg_gradient_top(firstColor, secondColor)
	background-image linear-gradient(top, firstColor 0%, secondColor 90%)

bg_gradient_left(firstColor, secondColor)
	background-image linear-gradient(left, firstColor 0%, secondColor 90%)
	
bg_gradient_center(firstColor, secondColor)
	background-image	radial-gradient(circle farthest-corner at 50% 50% , firstColor 0%, secondColor 95%)