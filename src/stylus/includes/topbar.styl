.Header	
	background white_color
	display block
	padding 20px 0
	width 100% 
	// position fixed
	z-index 5000
	transition_all(.3s)
	&.is-scrolled
		padding 5px 0
		background rgba(white_color, 1)
	&_container
		display inline-block
		position relative
	&_Logo
		// background-image url('../img/logo_keyicons.png')
		// background-position 5px 10px
		// background-repeat no-repeat
		// background-size 20px
		color dark_color
		display inline-block
		font-size 16px
		font-weight 700
		height 40px
		left 20px
		line-height 40px
		// padding-left 30px
		position absolute
		text-align left
		top 0
		// span
		// 	text-transform uppercase
			
	// &_Menu
	

.Menu
	text-align right
	padding 0 10px 0 0
	&_item
		display inline-block
		margin 0 10px
		&_link
			font-weight 400
			text-transform uppercase 
			font-size 13px
			line-height 40px
			color dark_color
					

@media only screen and (min-width : 768px)
	.Header	
		&_Logo
			span
				display inline-block
				font-size 16px
				text-transform uppercase
				color dark_color
		// &_Menu
	
	.Menu
		padding 0
		&_item
			margin 0 20px
			&_link
				position relative
				&::after
					opacity 0
					content ''
					height 4px
					left -15px
					position absolute
					top 45%
					width 4px
			

@media only screen and (min-width : 1100px)
	.Header
		&_Logo
			left 0
			span
				transition_all(.3s)
				&:hover
					color primary_color
	.Menu
		&_item
			&_link
				&::after
					transition_all(.3s)
				&:hover
					color primary_color
					&::after
						background primary_color
						opacity 1
						 left -10px




