.KeyContent
	background light_color
	padding 50px 10px
	.container
		padding 10px 0

	&__message
		background rgba(red, .2)
		border-color rgba(red, .8)
		color red
		display inline-block
		margin 0 auto
		padding 10px 20px
		border-radius 6px

.KeyiconsContent
	width 100%
	display: grid;
	grid-template-columns: repeat(3, 1fr);
	justify-items: stretch;
	-webkit-box-align: stretch;
	align-items: stretch;
	
.key
	text-align center
	margin  1px auto
	
.keyicon 
	background white_color
	display block
	margin 10px 10px 45px
	position relative
	shadow_custom(black_color, 0, 1px, 3px, 0px, .1)
	transition_all(.3s)
	width 100px
	height 100px
	padding 25px 0 
	outline none
	&::after
		content ''
		display block
		position absolute
		top 49%
		left 50%
		content ''
		width 48px
		height 48px
		z-index 1
		transform translate(-50%, -50%)
		border-radius 50%
		
	&.newBlue
		&::after
			background blue_color
		img
			filter invert(100%)
	&.newOrange
		&::after
			background yellow_color
		img
			filter invert(100%)
	&.newPink
		&::after
			background pink_color
		img
			filter invert(100%)
	
	&_name
		transition_all(.3s)
		position absolute
		top -20px
		font-family tipography2
		font-size 12px
		font-weight 400
		color smoke_color
		left 0
		width 100%
		text-align left
		white-space nowrap
		overflow hidden
		text-overflow ellipsis
		
	
	img
		width 24px
		margin-top 6px
		display inline-block
		z-index 100
		position relative
		
	&_download
		// background dark_blue
		border-radius 20px
		bottom 10px
		padding 5px 10px
		color dark_blue
		font-size 12px
		font-family tipography2
		line-height 10px
		font-weight bold
		height 20px
		position absolute
		left 50%
		transform translateX(-50%)
		opacity 0
		transition_all(.3s)
	&-new
		// background rgba(dark_blue, .1)
		opacity 1
		&.newBlue
			color blue_color
		&.newOrange
			color yellow_color
		&.newPink
			color pink_color
		
	&.keyicon_new--old
		display none
		
	&.is-clicked
		.keyicon
			&_download
				opacity 1
				text-decoration line-through
	
@media only screen and (min-width : 601px)
	.KeyiconsContent
		grid-template-columns: repeat(4, 1fr);

	.key
		padding 4px
	

@media only screen and (min-width : 768px)
	.KeyContent
		padding 50px 20px
		.container
			padding 0 
		
	.keyicon
		height 110px
		padding 35px 0 
		width 110px 
		margin 15px 16px 30px
		&:focus
			shadow_custom(black_color, 0, 10px, 30px, -6px, .1)
		
		&:hover
			shadow_custom(black_color, 0, 15px, 30px, -6px, .2)
			transform scale(1.1)
			padding 25px 0 45px
			.keyicon
				&_name
					color black_color
				&_download
					opacity 1
					bottom 15px
				&-new
					display none
				
					
		&.is-clicked
			padding 25px 0 45px
			.keyicon
				&_download
					bottom 15px
				&-new
					display none

@media screen and (min-width 900px)
	.KeyiconsContent
		grid-template-columns: repeat(5, 1fr);	
		

@media screen and (min-width 1100px)
	.KeyContent
		padding 50px 20px
		.container
			padding 0 0
	.KeyiconsContent
		grid-template-columns: repeat(6, 1fr);	

@media screen and (min-width 1200px)
	.KeyiconsContent
		grid-template-columns: repeat(8, 1fr);	

@media screen and (min-width 1300px)
	.KeyiconsContent
		grid-template-columns: repeat(8, 1fr);
	.key
		padding 0
	.keyicon 
		margin 0 0 50px 0
	
@media screen and (min-width 1400px)
	.KeyContent
		padding 50px 0
		.container
			padding 0 0
	.KeyiconsContent
		grid-template-columns: repeat(9, 1fr);

