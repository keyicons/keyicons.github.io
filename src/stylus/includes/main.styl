.KeyContent
	background gray_color_2
	padding 50px 0
	.container
		padding 10px
	&__message
		background rgba(red, .2)
		border-color rgba(red, .8)
		color red
		display inline-block
		margin 0 auto
		padding 10px 20px
		border-radius 6px
	
.keyicon 
	background white_color
	display block
	margin 10px 10px 30px
	position relative
	shadow_custom(black_color, 0, 1px, 3px, 0px, .1)
	transition_all(.3s)
	height 80px
	padding 25px 0 
	width 80px 
	outline none
	&_name
		transition_all(.3s)
		position absolute
		top -20px
		font-size 12px
		font-weight 400
		color gray_color_3
		left 0
		width 100%
		text-align left
		white-space nowrap
		overflow hidden
		text-overflow ellipsis
		
	
	img
		width 33px
		display inline-block
	
	&_download
		background primary_color
		border-radius 20px
		bottom 10px
		padding 5px 0
		line-height 12px
		color white_color
		font-size 10px
		height 20px
		position absolute
		left 10%
		width 80%
		opacity 0
		transition_all(.3s)
	&-new
		opacity 1
		background secondary_color
		color dark_color
		
	&.keyicon_new--old
		display none
		
	&.is-clicked
		.keyicon
			&_download
				opacity 1
	
@media only screen and (min-width : 768px)
	.KeyContent
		.container
			padding 0
			
	.keyicon
		height 100px
		padding 35px 0 
		width 100px 
		margin 15px 16px 30px
		&:focus
			shadow_custom(primary_color, 0, 10px, 30px, -6px, .2)
		
		&:hover
			shadow_custom(primary_color, 0, 15px, 30px, -6px, .4)
			transform scale(1.1)
			padding 25px 0 45px
			.keyicon
				&_name
					color black_color
				&_download
					opacity 1
					bottom 15px
				&-new
					display none
				
					
		&.is-clicked
			padding 25px 0 45px
			.keyicon
				&_download
					bottom 15px
				&-new
					display none
							

		

